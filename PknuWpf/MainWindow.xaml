<Window x:Class="PknuWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PknuWpf"
        mc:Ignorable="d"
        Title="Sample Window" Height="450" Width="800">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
        <TextBlock TextWrapping="Wrap" Text="Test Block" Height="40" Margin="10"/>
        <TextBox x:Name="TxtNames" Height="35" TextWrapping="Wrap" Text="Input something" Margin="10"/>
        <ProgressBar x:Name="PgdTest" Height="30" Margin="10" Minimum="0" Maximum="100" Value="60"/>
        <Slider Height="40" Margin="10"/>
        <PasswordBox PasswordChar="★" Password="Test" Height="30" Margin="10"/>

    </StackPanel>
</Window>
